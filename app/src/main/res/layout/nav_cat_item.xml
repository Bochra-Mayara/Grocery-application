<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="5dp">
<LinearLayout
    android:background="#DFFFD1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/cat_nav_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:background="@drawable/border"
        android:src="@drawable/fruits_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/nav_cat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Name"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nav_cat_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/cairo_extralight"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Description"
            android:textColor="@color/black" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Discount :"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/nav_cat_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20% OFF"
            android:textSize="24sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="@color/purple_700"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img11"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="200dp"

            />



    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>
